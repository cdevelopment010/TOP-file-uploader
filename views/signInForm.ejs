
<div class="sign-in fc-1"> 
    <h1 class="stand-out-text">File Explorer</h1>

    <div class="border">   
        <%- include("partials/errors") %>

        <form method="post" action="/sign-in" class="d-flex flex-column justify-content-between">

            <div>
                <div class="d-flex flex-column fc-3 mb-3">
                    <label for="">Email</label>
                    <input type="email" name="email" id="email" required value="<%= locals.user ? user.email : '' %>">
                </div>
                
                <div class="d-flex flex-column fc-3 mb-3">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" required>
                </div>
            </div>
            <div class="btn-group mt-3">
                <a href="/sign-up" class="btn btn-danger decoration-none">Create Account</a>
                <button type="submit" class="btn">Sign In</button>
            </div>
        </form>
    </div>
</div>