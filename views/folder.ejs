<h1>Folder: <%= folder.name %> </h1>

<div>
    <a href="/folder/update/<%= folder.id %>">Update Folder</a>
    <button type="button" onclick="openModal('deleteFolderModal')">Delete Folder</button>
</div>

<% if (locals.folder.file && folder.file.length > 0) { %>
<ul>
  <% folder.file.forEach(f => { %>
    <li><a href="/file/<%= f.id %>"><%= f.name %> </a></li>
  <% }) %>
</ul>
<% } %>

<!-- Modal Partial -->
<%- include('partials/modal', { 
  modal: {
      id: 'deleteFolderModal', 
      header: 'Confirm Action', 
      body: 'Are you sure you want to delete this folder?', 
      action: '/folder/delete/' + folder.id, 
      actionId: folder.id, 
      actionButton: 'Confirm Delete' 
  } 
}) %>